<!DOCTYPE html>
<html lang="en" class="h-full bg-black text-white font-space-grotesk antialiased">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= name %> - Images
  </title>
  <link rel="stylesheet" href="/assets/tailwind.css">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap');

    .font-space-grotesk {
      font-family: 'Space Grotesk', sans-serif;
    }

    ::-webkit-scrollbar {
      width: 6px;
    }

    ::-webkit-scrollbar-track {
      background: #000;
    }

    ::-webkit-scrollbar-thumb {
      background: #333;
      border-radius: 3px;
    }
  </style>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body class="flex h-full w-full bg-black text-gray-100">
  <%- include('../../components/sidebar', { name, user }) %>

  <main class="relative flex-1 overflow-y-auto">
    <div class="mx-auto max-w-7xl px-6 py-10 md:px-12">

      <!-- header -->
      <div class="mb-8 flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
        <div>
          <h1 class="text-3xl font-bold">Images</h1>
          <p class="mt-1 text-sm text-neutral-400">Manage Docker images and configurations.</p>
        </div>

        <div class="flex flex-wrap items-center gap-3">
          <a href="/admin/images/new"
             class="flex items-center gap-2 rounded-lg bg-white px-4 py-2 text-sm font-semibold text-black hover:bg-neutral-200 active:scale-95">
            <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            Create Image
          </a>

          <label class="flex cursor-pointer items-center gap-2 rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-2 text-sm font-semibold">
            <svg class="h-4 w-4 text-neutral-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5" />
            </svg>
            Import JSON
            <input id="json-upload" type="file" accept=".json" class="hidden" onchange="uploadJSON()" />
          </label>
        </div>
      </div>

      <!-- table wrapper -->
      <div class="overflow-hidden rounded-2xl border border-neutral-900 bg-neutral-950 shadow-inner">
        <div class="overflow-x-auto">
          <table class="w-full min-w-[720px] table-fixed text-left text-sm">
            <thead class="bg-neutral-900/40 text-neutral-300">
              <tr>
                <th class="px-4 py-3 w-1/3">Image</th>
                <th class="px-4 py-3 w-1/4">Docker Image</th>
                <th class="px-4 py-3 w-1/8 text-center">Envs</th>
                <th class="px-4 py-3 w-1/8 text-center">Files</th>
                <th class="px-4 py-3 w-1/6 text-right">Actions</th>
              </tr>
            </thead>

            <tbody class="divide-y divide-neutral-900">
              <% if (images && images.length > 0) { %>
                <% images.forEach(img => { %>
                  <tr onclick="window.location.href='/admin/image/<%= img.id %>'" class="cursor-pointer group hover:bg-neutral-900/30 transition-colors">
                    <td class="px-4 py-4 align-top">
                      <div class="flex items-start gap-3">
                        <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-neutral-900 text-neutral-300">
                          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" d="M21 7.5l-9-5.25L3 7.5m18 0l-9 5.25m9-5.25v9l-9 5.25M3 7.5l9 5.25M3 7.5v9l9 5.25m0-9v9" />
                          </svg>
                        </div>

                        <div class="flex-1">
                          <div class="font-semibold text-white"><%= img.name %></div>
                          <div class="mt-1 text-xs text-neutral-400 truncate-2" title="<%= img.description || '' %>"><%= img.description ? img.description.substring(0, 20) + (img.description.length > 20 ? 'â€¦' : '') : '\u00A0' %></div>
                        </div>
                      </div>
                    </td>

                    <td class="px-4 py-4 align-top">
                      <div class="font-mono text-xs text-neutral-300 truncate" title="<%= img.dockerImage %>"><%= img.dockerImage %></div>
                    </td>

                    <td class="px-4 py-4 text-center align-top">
                      <div class="font-mono text-sm text-neutral-300"><%= Object.keys(img.envs || {}).length %></div>
                    </td>

                    <td class="px-4 py-4 text-center align-top">
                      <div class="font-mono text-sm text-neutral-300"><%= (img.files || []).length %></div>
                    </td>

                    <td class="px-4 py-4 text-right align-top">
                      <div class="flex items-center justify-end gap-2">
                        <a href="/admin/images/export/<%= img.id %>" target="_blank" title="Export"
                           class="rounded-md bg-neutral-900 p-2 text-neutral-400 hover:bg-neutral-800 hover:text-white">
                          <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
                          </svg>
                        </a>

                        <a href="/admin/image/<%= img.id %>" title="Edit"
                           class="rounded-md bg-neutral-900 p-2 text-neutral-400 hover:bg-neutral-800 hover:text-white">
                          <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" d="M4 20h16" />
                            <path stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232a2.5 2.5 0 013.536 3.536L7 20l-4 1 1-4 11.232-11.304z"/>
                          </svg>
                        </a>

                        <button type="button" aria-label="Delete" title="Delete"
                                onclick="deleteImage(event, '<%= img.id %>')"
                                class="rounded-md bg-red-900/10 p-2 text-red-500 hover:bg-red-900/20">
                          <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" d="M6 7h12M8 7v11a2 2 0 002 2h4a2 2 0 002-2V7M10 7V5a2 2 0 012-2h0a2 2 0 012 2v2" />
                          </svg>
                        </button>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="5" class="px-8 py-16 text-center text-neutral-400">
                    <div class="mx-auto max-w-md">
                      <svg class="h-12 w-12 mx-auto mb-4 text-neutral-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5z"/>
                      </svg>
                      <h3 class="text-lg font-semibold text-white">No Images</h3>
                      <p class="mt-2 text-sm">Create an image or import a JSON configuration to get started.</p>
                    </div>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </main>

  <script>
    async function deleteImage(e, id) {
      e.stopPropagation();
      if (!confirm('Delete this image?')) return;
      try {
        const res = await fetch(`/admin/images/delete/${id}`, { method: 'POST' });
        const data = await res.json();
        if (data.success) location.reload();
        else alert('Delete failed');
      } catch (err) {
        alert('Network error: ' + (err.message || err));
      }
    }

    function uploadJSON() {
      const input = document.getElementById('json-upload');
      if (!input || !input.files || !input.files[0]) return;
      const file = input.files[0];
      const reader = new FileReader();
      reader.onload = async (ev) => {
        try {
          const data = JSON.parse(ev.target.result);
          const { dockerImage, name } = data;
          if (!dockerImage || !name) return alert('Invalid JSON: missing name or dockerImage');
          const res = await fetch('/admin/images/new', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
          });
          const j = await res.json();
          if (j.success) { alert('Imported'); location.reload(); }
          else alert('Import failed');
        } catch (err) {
          alert('Invalid JSON file');
        }
      };
      reader.readAsText(file);
    }
  </script>
</body>
</html>
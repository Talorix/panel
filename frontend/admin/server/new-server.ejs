<!DOCTYPE html>
<html lang="en" class="h-full bg-black text-white font-space-grotesk antialiased">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= name %> - New Server
  </title>
  <link rel="stylesheet" href="/assets/tailwind.css">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap');

    .font-space-grotesk {
      font-family: 'Space Grotesk', sans-serif;
    }

    ::-webkit-scrollbar {
      width: 6px;
    }

    ::-webkit-scrollbar-track {
      background: #000;
    }

    ::-webkit-scrollbar-thumb {
      background: #333;
      border-radius: 3px;
    }
  </style>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>

<body class="flex h-full w-full overflow-hidden">

  <%- include('../../components/sidebar', { name, user }) %>

    <main class="relative flex-1 overflow-y-auto bg-black">
      <div class="mx-auto max-w-5xl px-6 py-12 md:px-12">

        <!-- Back Link -->
        <a href="/admin/servers"
          class="mb-6 flex items-center gap-2 text-sm text-neutral-500 hover:text-white transition-colors w-fit">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
            stroke="currentColor" class="h-4 w-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
          </svg>
          Back to Servers
        </a>

        <!-- Header -->
        <div class="mb-12">
          <h1 class="text-3xl font-bold tracking-tight text-white md:text-4xl">Create New Server</h1>
          <p class="mt-2 text-neutral-400">Deploy a new server instance for a user.</p>
        </div>

        <!-- Create Form -->
        <div class="space-y-8">

          <!-- Core Details -->
          <div class="rounded-md border border-neutral-900 bg-neutral-950 p-8">
            <h2 class="mb-6 text-lg font-bold text-white">Basic Information</h2>

            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">

              <div class="space-y-2">
                <label class="text-xs font-bold uppercase tracking-wider text-neutral-500">Server Name</label>
                <input id="name" type="text" placeholder="e.g. My Survival Server"
                  class="w-full rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-3 text-sm text-white placeholder-neutral-600 outline-none focus:border-white focus:ring-1 focus:ring-white transition-all" />
              </div>

              <div class="space-y-2">
                <label class="text-xs font-bold uppercase tracking-wider text-neutral-500">Owner</label>
                <select id="user"
                  class="w-full rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-3 text-sm text-white placeholder-neutral-600 outline-none focus:border-white focus:ring-1 focus:ring-white transition-all">
                  <option value="">Select User...</option>
                  <% users.forEach(u=> { %>
                    <option value="<%= u.id %>">
                      <%= u.username %> (<%= u.email %>)
                    </option>
                    <% }) %>
                </select>
              </div>

            </div>
          </div>

          <!-- Allocation & Resources -->
          <div class="rounded-md border border-neutral-900 bg-neutral-950 p-8">
            <h2 class="mb-6 text-lg font-bold text-white">Resources & Network</h2>

            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">

              <!-- Node/Network -->
              <div class="space-y-4">
                <div class="space-y-2">
                  <label class="text-xs font-bold uppercase tracking-wider text-neutral-500">Node</label>
                  <select id="node" onchange="loadAllocations()"
                    class="w-full rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-3 text-sm text-white placeholder-neutral-600 outline-none focus:border-white focus:ring-1 focus:ring-white transition-all">
                    <option value="">Select Node...</option>
                    <% nodes.forEach(n=> { %>
                      <option value="<%= n.id %>"
                        data-allocations="<%= encodeURIComponent(JSON.stringify(n.allocations || [])) %>">
                        <%= n.name %> (<%= n.ip %>)
                      </option>
                      <% }) %>
                  </select>
                </div>

                <div class="space-y-2">
                  <label class="text-xs font-bold uppercase tracking-wider text-neutral-500">Allocation (Port)</label>
                  <select id="allocation"
                    class="w-full rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-3 text-sm text-white placeholder-neutral-600 outline-none focus:border-white focus:ring-1 focus:ring-white transition-all">
                    <option value="">Select Node First</option>
                  </select>
                </div>
              </div>

              <!-- Limits -->
              <div class="space-y-4">
                <div class="grid grid-cols-3 gap-4">
                  <div class="space-y-2">
                    <label class="text-xs font-bold uppercase tracking-wider text-neutral-500">Allocations Limit</label>
                    <input id="allocationLimit" type="number" placeholder="5" value="1"
                      class="w-full rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-3 text-sm text-white placeholder-neutral-600 outline-none focus:border-white focus:ring-1 focus:ring-white transition-all" />
                  </div>
                  <div class="space-y-2">
                    <label class="text-xs font-bold uppercase tracking-wider text-neutral-500">RAM (MB)</label>
                    <input id="ram" type="number" placeholder="1024" value="2048"
                      class="w-full rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-3 text-sm text-white placeholder-neutral-600 outline-none focus:border-white focus:ring-1 focus:ring-white transition-all" />
                  </div>
                  <div class="space-y-2">
                    <label class="text-xs font-bold uppercase tracking-wider text-neutral-500">Disk (GB)</label>
                    <input id="disk" type="number" placeholder="10" value="5"
                      class="w-full rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-3 text-sm text-white placeholder-neutral-600 outline-none focus:border-white focus:ring-1 focus:ring-white transition-all" />
                  </div>
                  <div class="space-y-2">
                    <label class="text-xs font-bold uppercase tracking-wider text-neutral-500">CPU (Cores)</label>
                    <input id="core" type="number" placeholder="1" value="1"
                      class="w-full rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-3 text-sm text-white placeholder-neutral-600 outline-none focus:border-white focus:ring-1 focus:ring-white transition-all" />
                  </div>
                </div>
              </div>

            </div>
          </div>

          <!-- Image & Startup -->
          <div class="rounded-md border border-neutral-900 bg-neutral-950 p-8">
            <h2 class="mb-6 text-lg font-bold text-white">Startup Configuration</h2>

            <div class="space-y-6">
              <div class="space-y-2">
                <label class="text-xs font-bold uppercase tracking-wider text-neutral-500">Software Image</label>
                <select id="image" onchange="loadImageEnv()"
                  class="w-full rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-3 text-sm text-white placeholder-neutral-600 outline-none focus:border-white focus:ring-1 focus:ring-white transition-all">
                  <option value="">Select Image...</option>
                  <% images.forEach(i=> { %>
                    <option value="<%= i.id %>" data-env="<%= encodeURIComponent(JSON.stringify(i.envs || {})) %>"
                      data-dimg="<%= encodeURIComponent(JSON.stringify(i.dockerImages || [])) %>">
                      <%= i.name %>
                    </option>
                    <% }) %>
                </select>
              </div>
             <div class="space-y-2">
                <label class="text-xs font-bold uppercase tracking-wider text-neutral-500">Docker Image</label>
                <select id="DockerImg"
                  class="w-full rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-3 text-sm text-white placeholder-neutral-600 outline-none focus:border-white focus:ring-1 focus:ring-white transition-all">
                  <option value="">Select Image First...</option>
                </select>
              </div>
              <div id="envSection" class="hidden animate-slide-up">
                <label class="mb-3 block text-xs font-bold uppercase tracking-wider text-neutral-500">Environment
                  Variables</label>
                <div id="envList" class="grid grid-cols-1 gap-4 lg:grid-cols-2">
                  <!-- Loaded via JS -->
                </div>
              </div>
            </div>
          </div>

          <!-- Actions -->
          <div class="flex items-center justify-end gap-4 pt-4 border-t border-neutral-900">
            <a href="/admin/servers"
              class="rounded-xl px-6 py-3 text-sm font-bold text-neutral-400 hover:text-white transition-colors">Cancel</a>
            <button onclick="createServer()" id="createBtn"
              class="flex items-center gap-2 rounded-xl bg-white px-8 py-3 text-sm font-bold text-black transition-transform hover:scale-[1.02] hover:bg-neutral-200 shadow-lg shadow-white/10">
              Deploy Server
            </button>
          </div>

        </div>
      </div>
    </main>

    <!-- Loading Modal -->
    <div id="creating-modal"
      class="fixed inset-0 z-50 hidden flex items-center justify-center bg-black/80 backdrop-blur-sm transition-opacity">
      <div id="creating-panel"
        class="flex flex-col items-center justify-center rounded-md bg-black border border-neutral-900 p-8 shadow-2xl transform scale-95 opacity-0 transition-all">
        <div class="mb-4 h-12 w-12 animate-spin rounded-full border-4 border-neutral-800 border-t-white"></div>
        <h2 class="text-lg font-bold text-white">Deploying server...</h2>
        <p class="mt-1 text-sm text-neutral-400">This may take a few moments.</p>
      </div>
    </div>

    <script>
      function loadAllocations() {
        const nodeSelect = document.getElementById("node");
        const allocSelect = document.getElementById("allocation");
        allocSelect.innerHTML = '<option value="">Select Allocation...</option>';

        if (!nodeSelect.value) {
          allocSelect.innerHTML = '<option value="">Select Node First</option>';
          return;
        }

        const nodeOption = nodeSelect.options[nodeSelect.selectedIndex];
        const rawAlloc = nodeOption.dataset.allocations;
        const allocations = rawAlloc ? JSON.parse(decodeURIComponent(rawAlloc)) : [];

        let count = 0;
        allocations.forEach((a) => {
          if (a.allocationOwnedto?.serverId) return;
          const option = document.createElement("option");
          option.value = a.id;
          option.textContent = `${a.ip}:${a.port} ${a.domain ? '(' + a.domain + ')' : ''}`;
          allocSelect.appendChild(option);
          count++;
        });

        if (count === 0) {
          const opt = document.createElement("option");
          opt.textContent = "No allocations available on this node";
          opt.disabled = true;
          opt.selected = true;
          allocSelect.appendChild(opt);
        }
      }
      const dockerSelect = document.getElementById("DockerImg");
      function loadImageEnv() {
        const imageSelect = document.getElementById("image");
        const envSection = document.getElementById("envSection");
        const envList = document.getElementById("envList");

        // Reset UI
        envList.innerHTML = "";
        dockerSelect.innerHTML = `<option value="">Select Image First...</option>`;
        envSection.classList.add("hidden");

        if (!imageSelect.value) return;

        const option = imageSelect.options[imageSelect.selectedIndex];

        /* -------------------- ENV VARS -------------------- */
        const rawEnv = option.dataset.env;
        const envs = rawEnv ? JSON.parse(decodeURIComponent(rawEnv)) : {};

        const keys = Object.keys(envs);
        if (keys.length > 0) {
          envSection.classList.remove("hidden");

          keys.forEach(key => {
            const div = document.createElement("div");
            div.className = "flex flex-col space-y-1";
            div.innerHTML = `
          <label class="text-xs font-mono text-neutral-400">${key}</label>
          <input
            data-key="${key}"
            value="${envs[key]}"
            class="w-full rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-2 text-sm text-white placeholder-neutral-600 outline-none focus:border-white focus:ring-1 focus:ring-white transition-all"
          />
        `;
            envList.appendChild(div);
          });
        }

        /* -------------------- DOCKER IMAGES -------------------- */
        const rawDockerImgs = option.dataset.dimg;
        const dockerImages = rawDockerImgs
          ? JSON.parse(decodeURIComponent(rawDockerImgs))
          : [];
        dockerSelect.innerText = ''
        if (dockerImages.length > 0) {
          dockerImages.forEach(img => {
            const opt = document.createElement("option");
            opt.value = img;
            opt.textContent = img;
            dockerSelect.appendChild(opt);
          });
        }
      }
      function collectEnv() {
        const env = {};
        document.querySelectorAll("#envList input[data-key]").forEach(input => {
          env[input.dataset.key] = input.value;
        });
        return env;
      }

      const creatingModal = document.getElementById("creating-modal");
      const creatingPanel = document.getElementById("creating-panel");

      function showLoading() {
        creatingModal.classList.remove("hidden");
        creatingModal.classList.add("flex");
        setTimeout(() => {
          creatingPanel.classList.remove("scale-95", "opacity-0");
          creatingPanel.classList.add("scale-100", "opacity-100");
        }, 10);
      }

      function hideLoading() {
        creatingPanel.classList.remove("scale-100", "opacity-100");
        creatingPanel.classList.add("scale-95", "opacity-0");
        setTimeout(() => {
          creatingModal.classList.remove("flex");
          creatingModal.classList.add("hidden");
        }, 200);
      }

      async function createServer() {
        const btn = document.getElementById("createBtn");
        const name = document.getElementById("name").value.trim();
        const user = document.getElementById("user").value;
        const node = document.getElementById("node").value;
        const allocation = document.getElementById("allocation").value;
        const allocationLimit = document.getElementById("allocationLimit").value;
        const image = document.getElementById("image").value;
        const ram = parseInt(document.getElementById("ram").value);
        const disk = parseInt(document.getElementById("disk").value);
        const core = parseInt(document.getElementById("core").value);

        if (!name || !user || !node || !allocation || !image || isNaN(ram) || isNaN(disk) || isNaN(core)) {
          return alert("Please fill in all fields.");
        }

        btn.disabled = true;
        showLoading();

        try {
          const res = await axios.post("/admin/servers/new", {
            userId: user,
            nodeId: node,
            allocationId: allocation,
            allocationLimit,
            imageId: image,
            name: name,
            ram,
            core,
            disk,
            env: collectEnv(),
            DockerImg: dockerSelect.value
          });

          if (res.data.success) {
            window.location.href = "/admin/servers";
          } else {
            throw new Error("Creation failed");
          }
        } catch (e) {
          hideLoading();
          btn.disabled = false;
          console.error(e);
          alert("Failed to create server: " + (e.response?.data?.message || e.message));
        }
      }
    </script>
</body>

</html>